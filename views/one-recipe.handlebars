<section class="container">
    <section class="flex-row justify-center">
    <h3 class="one-recipe-header">{{data.title}}</h3>
    <div class="card-body">
    <img class="food-img-3" src={{data.image}} alt="recipe image">

      <h3 class="recipe-header">Ingredients:</h3>
    <section class="details flex-row justify-center">
      {{#each data.extendedIngredients as |ingredient|}}
      <div class="ingredient">
        <ul>
          <li>{{ingredient.original}}</li>
        </ul>
      </div> 
      {{/each}}
       </section>
      <h3 class="recipe-header">Instructions:</h3>
     <p class="instructions">{{data.instructions}}</p>
    </div>
  </section>
</section>
  </section>
